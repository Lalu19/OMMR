            }, function () {
                $.ajax({
                    type: "GET",
                    url: "@apiUrl/api/Agent/SetDeleteRequest/" + id + "/" + @Context.Session.GetInt32("UserId"),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
